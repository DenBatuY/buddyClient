<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegistrationAdditionalInfoFragment"
    android:background="@drawable/main_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registration_start_constraint_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registration_end_constraint_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <TextView
        android:id="@+id/registration_name_reg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>
    
    <ImageButton
        android:id="@+id/registration_avatar_button"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/avatar_button"
        app:layout_constraintTop_toBottomOf="@id/registration_name_reg_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/avatar" />

    <TextView
        android:id="@+id/registration_name_surname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_surname_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/registration_avatar_button"
        app:layout_constraintStart_toStartOf="@id/registration_start_constraint_line"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registration_name_surname_input_container"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintTop_toBottomOf="@id/registration_name_surname_text"
        app:layout_constraintStart_toStartOf="@id/registration_start_constraint_line"
        app:layout_constraintEnd_toEndOf="@id/registration_end_constraint_line"
        android:layout_marginTop="10dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registration_name_surname_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animal_search_panel"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/registration_identify_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kennel_identify_num"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/registration_name_surname_input_container"
        app:layout_constraintStart_toStartOf="@id/registration_name_surname_text"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registration_identify_num_container"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintTop_toBottomOf="@id/registration_identify_num_text"
        app:layout_constraintStart_toStartOf="@id/registration_start_constraint_line"
        app:layout_constraintEnd_toEndOf="@id/registration_end_constraint_line"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registration_identify_num_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animal_search_panel"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/registration_name_surname_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_marginTop="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FF8A80"
        app:layout_constraintTop_toBottomOf="@id/registration_identify_num_container"/>







</androidx.constraintlayout.widget.ConstraintLayout>