<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_for_animal_card"
    android:layout_width="match_parent"
    android:layout_height="193dp"
    app:cardCornerRadius="4dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/animal_image"
        android:layout_width="168dp"
        android:layout_height="162dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <CheckBox
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:button="@drawable/heart_checkbox"
        app:layout_constraintTop_toTopOf="@id/animal_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        />

        <TextView
            android:id="@+id/who_is"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/animal_image"
            app:layout_constraintTop_toTopOf="@id/animal_image"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            tools:text="Собака Клавдия"/>

    <TextView
        android:id="@+id/kennel_name"
        tools:text="Приют &#34;Папа Кот&#34;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/animal_image"
        app:layout_constraintTop_toBottomOf="@id/who_is"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#007AE9"/>

    <TextView
        android:id="@+id/gender_name"
        tools:text="Пол: мальчик"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/animal_image"
        app:layout_constraintTop_toBottomOf="@id/kennel_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/approximately_age"
        tools:text="Возраст: 12 лет"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/animal_image"
        app:layout_constraintTop_toBottomOf="@id/gender_name"
        android:layout_marginStart="16dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/breed_name"
        tools:text="Порода: московская сторожевая"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/animal_image"
        app:layout_constraintTop_toBottomOf="@id/approximately_age"
        android:layout_marginStart="16dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/animal_color"
        tools:text="Цвет: Серый"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/animal_image"
        app:layout_constraintTop_toBottomOf="@id/breed_name"
        android:layout_marginStart="16dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/distance_from_you"
        tools:text="550 м от Вас"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/animal_image"
        app:layout_constraintBottom_toBottomOf="@id/animal_image"
        android:layout_marginStart="16dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/read_more"
        tools:text="Читать еще ..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/distance_from_you"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:textColor="#007AE9"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>