<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registration_start_constraint_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registration_end_constraint_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <TextView
        android:id="@+id/registration_secret_data_reg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/registration_end_constraint_line"
        app:layout_constraintStart_toStartOf="@id/registration_start_constraint_line"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/registration_secret_data_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/e_mail"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/registration_secret_data_reg_text"
        app:layout_constraintStart_toStartOf="@id/registration_start_constraint_line"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registration_email_input"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/registration_secret_data_email_text"
        app:layout_constraintStart_toStartOf="@id/registration_start_constraint_line"
        app:layout_constraintEnd_toEndOf="@id/registration_end_constraint_line"
        android:layout_marginTop="10dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/animal_search_panel"
            android:inputType="textEmailAddress"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/registration_secret_data_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/registration_email_input"
        app:layout_constraintStart_toStartOf="@id/registration_secret_data_email_text"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registration_secret_data_password_input_container"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/registration_secret_data_password_text"
        app:layout_constraintStart_toStartOf="@id/registration_start_constraint_line"
        app:layout_constraintEnd_toEndOf="@id/registration_end_constraint_line"
        android:layout_marginTop="10dp"
        app:endIconMode="password_toggle"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registration_secret_data_password_input"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/animal_search_panel"
            android:inputType="textPassword"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/registration_secret_data_repeat_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repeat_password"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/registration_secret_data_password_input_container"
        app:layout_constraintStart_toStartOf="@id/registration_secret_data_password_text"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registration_secret_data_repeat_password_input_container"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:endIconMode="password_toggle"
        app:layout_constraintTop_toBottomOf="@id/registration_secret_data_repeat_password_text"
        app:layout_constraintStart_toStartOf="@id/registration_start_constraint_line"
        app:layout_constraintEnd_toEndOf="@id/registration_end_constraint_line"
        android:layout_marginTop="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:background="@drawable/animal_search_panel"

            />

    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:id="@+id/registration_secret_data_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_marginTop="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FF8A80"
        app:layout_constraintTop_toBottomOf="@id/registration_secret_data_repeat_password_input_container"/>

</androidx.constraintlayout.widget.ConstraintLayout>