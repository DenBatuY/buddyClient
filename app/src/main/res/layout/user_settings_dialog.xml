<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="310dp"
        android:layout_height="290dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="@color/user_settings_dialog_color"
        android:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/user_settings_dialog_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_settings_dialog_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/user_settings_icon_description" />

            <TextView
                android:id="@+id/user_settings_dialog_clarification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_settings_notification_text"
                app:layout_constraintTop_toBottomOf="@id/user_settings_dialog_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/user_settings_dialog_clarification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_settings_dialog_clarification_text"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/user_settings_dialog_clarification"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:textColor="@color/user_settings_dialog_clarification_text_color"/>

            <Button
                android:id="@+id/user_settings_dialog_positive_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="@string/yes_btn"
                android:textColor="@color/cian5"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/user_settings_dialog_negative_btn"
                app:layout_constraintBottom_toBottomOf="@id/user_settings_dialog_negative_btn"
                android:layout_marginEnd="10dp"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/user_settings_dialog_negative_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="@string/no_btn"
                android:textColor="@color/cian5"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="40dp"
                android:layout_marginEnd="40dp"
                style="@style/Widget.AppCompat.Button.Borderless"/>


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>

</FrameLayout>