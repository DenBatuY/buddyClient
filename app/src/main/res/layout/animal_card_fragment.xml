<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey2"
    tools:context="mr.shtein.buddyandroidclient.AnimalsCardFragment"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/cloud_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="340dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="cloud reverse.json"
        app:lottie_loop="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/cloud_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="340dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="cloud.json"
        app:lottie_loop="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/animal_big_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/big_card_kennel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#007AE9"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Приют: Папа Кот" />

            <TextView
                android:id="@+id/big_card_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/big_card_kennel_name"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="550м от вас" />

            <androidx.cardview.widget.CardView
                android:id="@+id/big_card_photo_gallery_card"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/big_card_kennel_name">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/big_card_photo_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/big_card_destination" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/big_animal_image_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:background="@drawable/big_animal_photo_count_background"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"

                app:layout_constraintBottom_toTopOf="@id/big_card_wrapper_for_animal_information"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:elevation="2dp"
                android:textColor="@color/white"
                tools:text="1/3" />


            <FrameLayout
                android:id="@+id/big_card_wrapper_for_animal_information"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/animal_information_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/big_card_photo_gallery_card" />

            <TextView
                android:id="@+id/big_card_animal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/big_card_wrapper_for_animal_information"
                tools:text="Собака Клавдия" />

            <TextView
                android:id="@+id/big_card_animal_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/big_card_animal_name"
                tools:text="Пол: мальчик" />

            <TextView
                android:id="@+id/big_card_animal_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/big_card_animal_gender"
                tools:text="Возраст: 12 лет" />

            <TextView
                android:id="@+id/big_card_animal_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/big_card_animal_age"
                tools:text="Порода: Московская Сторожевая" />

            <TextView
                android:id="@+id/big_card_animal_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/big_card_animal_breed"
                tools:text="Цвет: Серый" />

            <TextView
                android:id="@+id/big_card_animal_fur_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/big_card_animal_color"
                tools:text="Длина шерсти: средняя" />

            <TextView
                android:id="@+id/big_card_animal_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/big_card_animal_fur_length"
                tools:text="Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum  Lorem ipsum Lorem ipsum " />

            <ImageButton
                android:id="@+id/phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/phone_button"
                app:layout_constraintEnd_toEndOf="@id/big_card_wrapper_for_animal_information"
                app:layout_constraintTop_toTopOf="@id/big_card_wrapper_for_animal_information" />

            <ImageButton
                android:id="@+id/email_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/phone_button"
                android:contentDescription="@string/button_for_call"
                app:layout_constraintEnd_toEndOf="@id/big_card_wrapper_for_animal_information"
                app:layout_constraintTop_toBottomOf="@id/phone_icon" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>