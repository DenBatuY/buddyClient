<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/city_choice_fragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="mr.shtein.buddyandroidclient.StartFragment"
        android:label="StartFragment" >
        <action
            android:id="@+id/action_startFragment_to_welcomeDescriptionFragment"
            app:destination="@id/welcomeDescriptionFragment"
             />
    </fragment>
    <fragment
        android:id="@+id/welcomeDescriptionFragment"
        android:name="mr.shtein.buddyandroidclient.WelcomeDescriptionFragment"
        android:label="WelcomeDescriptionFragment" >
        <action
            android:id="@+id/action_welcomeDescriptionFragment_to_cityChoiceFragment"
            app:destination="@id/pre_city_choice_fragment" />
    </fragment>
    <fragment
        android:id="@+id/pre_city_choice_fragment"
        android:name="mr.shtein.buddyandroidclient.PreCityChoiceFragment"
        android:label="PreCityChoiceFragment"
        >
        <action
            android:id="@+id/action_pre_city_choice_fragment_to_city_choice_fragment2"
            app:destination="@id/city_choice_fragment" />
    </fragment>
    <fragment
        android:id="@+id/city_choice_fragment"
        android:name="mr.shtein.buddyandroidclient.CityChoiceFragment"
        android:label="CityChoiceFragment" >
        <action
            android:id="@+id/action_city_choice_fragment_to_animalChoiceFragment"
            app:destination="@id/animal_choice_fragment" />
    </fragment>
    <fragment
        android:id="@+id/animal_choice_fragment"
        android:name="mr.shtein.buddyandroidclient.AnimalsListFragment"
        android:label="AnimalChoiceFragment" >
        <argument
            android:name="city"
            app:argType="string"
            android:defaultValue="empty" />
        <action
            android:id="@+id/action_animal_choice_fragment_to_animalsCardFragment"
            app:destination="@id/animalsCardFragment" />
        <action
            android:id="@+id/action_animal_choice_fragment_to_profileFragment2"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/animalsCardFragment"
        android:name="mr.shtein.buddyandroidclient.AnimalsCardFragment"
        android:label="AnimalsCardFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="mr.shtein.buddyandroidclient.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_to_registrationKennelInfoFragment"
            app:destination="@id/registrationKennelInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="mr.shtein.buddyandroidclient.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/registrationKennelInfoFragment"
        android:name="mr.shtein.buddyandroidclient.RegistrationMainInfoFragment"
        android:label="RegistrationKennelInfoFragment" >
        <action
            android:id="@+id/action_registrationKennelInfoFragment_to_registrationSecretDataInfoFragment"
            app:destination="@id/registrationSecretDataInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationSecretDataInfoFragment"
        android:name="mr.shtein.buddyandroidclient.RegistrationAdditionalKennelInfoFragment"
        android:label="RegistrationSecretDataInfoFragment" >
        <action
            android:id="@+id/action_registrationSecretDataInfoFragment_to_registrationAdditionalInfoFragment2"
            app:destination="@id/registrationAdditionalInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationAdditionalInfoFragment"
        android:name="mr.shtein.buddyandroidclient.RegistrationAdditionalInfoFragment"
        android:label="fragment_registration_additional_info"
        tools:layout="@layout/fragment_registration_additional_info" />
</navigation>