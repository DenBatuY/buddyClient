<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyLayout" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="backgroundTint">@color/input_background</item>
        <item name="colorPrimary">@color/cian5</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="shapeAppearanceLargeComponent">@style/mySt</item>
    </style>
    
    <style name="myst" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ShoppingList.BottomSheetDialog</item>

    </style>
    <style name="ShoppingList.BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet">
        <item name="backgroundTint">@color/white</item>

    </style>

    <style name="overlaySearchInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/shapeAppearanceForSearchTextInputStyle</item>

    </style>

    <style name="shapeAppearanceForSearchTextInputStyle" parent="mySt">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="shapeAppearanceForInputTextInputStyle" parent="mySt">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="largeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="elevation">4dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>

    </style>

    <style name="textInputContainer" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/cian5</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="changeEditTextPadding" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

</resources>